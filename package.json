{
  "name": "try.yolk.link",
  "version": "0.1.0",
  "private": true,
  "author": "Li Zunlong <lizunlong@gmail.com>",
  "scripts": {
    "dev": "npm run watch:css & BROWSER=none react-scripts start",
    "build": "NODE_ENV=production npm run build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:css": "postcss src/tailwind.css -o src/index.css",
    "watch:css": "postcss src/tailwind.css -o src/index.css -w"
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@sentry/browser": "^5.11.1",
    "@testing-library/jest-dom": "^5.0.0",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^8.0.3",
    "@types/classnames": "^2.2.9",
    "@types/jest": "^24.9.0",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^13.1.8",
    "@types/node-fetch": "^2.5.4",
    "@types/reach__router": "^1.2.6",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-helmet": "^5.0.15",
    "@types/webrtc": "0.0.25",
    "classnames": "^2.2.6",
    "clipboard-copy": "^3.1.0",
    "dom-confetti": "^0.1.1",
    "faunadb": "^2.11.1",
    "formik": "^2.1.2",
    "nanoid": "^2.1.9",
    "node-fetch": "^2.6.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1",
    "react-scripts": "3.3.0",
    "typescript": "^3.7.5",
    "vconsole": "^3.3.4",
    "zustand": "^2.2.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@now/node": "^1.3.5",
    "autoprefixer": "^9.7.4",
    "fetch-mock-jest": "^1.0.0",
    "husky": "^4.0.10",
    "lint-staged": "^9.5.0",
    "postcss-cli": "^7.1.0",
    "prettier": "^1.19.1",
    "stylelint-config-recommended": "^3.0.0",
    "tailwindcss": "^1.1.4"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
